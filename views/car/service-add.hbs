<h2>Werkstatt-Rechnungs-Daten</h2>
<div>
  <form action="/myaccount/service/add/{{carId}}" method="POST" id="form-service-add" enctype="multipart/form-data">
    <div>
      <label for="datum">Datum:</label>
      <input type="text" name="datum" id="datum" value="{{heute}}">
    </div>
    <div>
      <label for="kilometerstand">Kilometerstand:</label>
      <input type="text" name="kilometerstand" id="kilometerstand">
    </div>
    <div>
      <label for="reparaturposten">Reparaturposten:</label>
      <input type="text" name="reparaturposten" id="reparaturposten">
    </div>
    <div>
      <label for="betrag">Rechnungsbetrag:</label>
      <input type="text" name="betrag" id="betrag">
    </div>
    <div>
      <label for="rechnung">Rechnung:</label>
      <input type="file" name="rechnung" id="rechnung">
    </div>
    <button type="submit">Speichern</button>   
  </form>
</div>
